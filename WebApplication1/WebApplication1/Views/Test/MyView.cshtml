@using WebApplication1.Models
@model Employe
@{
    Layout = null;
    //Employe emp = (Employe)ViewData["EmpKey"];
    //Employe emp = ViewBag.EmpKey;
    //string t =(string)ViewData["greeting"];
    string t = ViewBag.Greeting;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MyView</title>
</head>
<body>
    <div> 
        <h1>@Model.Name,@t</h1>
        <h1>@Model.Name,@((string)ViewData["greeting"])</h1>
        <hr />
        <h2>员工信息</h2>
        <p>姓名:@Model.Name</p>
        <p>工资:@Model.Salary.ToString("c")</p>
      
            @{
                if (Model.Salary > 1000)
                {
                    <p>土豪</p>
                }
                else
                {
                    <p>屌丝</p>                
                }
            }
       
        
    </div>
</body>
</html>
